<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace命名空间，作用就是对sql进行分类化管理，理解sql隔离
注意：使用mapper代理方法开发，namespace有特殊重要的作用
-->
<mapper namespace="com.tang.profile.demoprovider.infrastrucrute.DAO.profile.IDemoPersonDAO">
    <resultMap id="BaseResultMap" type="com.tang.profile.demoprovider.infrastrucrute.model.DemoPersonDto">
        <id column="PERSON_ID" jdbcType="BIGINT" property="personId"/>
        <result column="PERSON_NAME" property="personName" jdbcType="VARCHAR"/>
        <result column="OPUS_ID" property="opusId" jdbcType="BIGINT"/>
        <result column="PERSON_PHOTO_ID" property="personPhotoId" jdbcType="BIGINT"/>
        <result column="PERSON_MV_ID" property="personMvId" jdbcType="BIGINT"/>
        <result column="STATE" property="state" jdbcType="VARCHAR"/>
        <result column="STATE_DATE" property="stateDate" jdbcType="TIMESTAMP"/>
        <!--<result column="DESC" property="desc" jdbcType="Clob" typeHandler="org.apache.ibatis.type.ClobTypeHandler"/>-->
        <result column="PERSON_DESC" property="desc" jdbcType="CLOB" javaType="java.lang.String"/>
    </resultMap>

    <!--&lt;!&ndash; 查询单条记录 &ndash;&gt;-->
    <!--<select id="selectAll" resultType="java.lang.Long">-->
    <!--select count(acct_id) from acct-->
    <!--</select>-->

    <select id="selectAll" resultMap="BaseResultMap">
    select * from DEMO_PERSON where 1=1 order by person_id
    </select>

</mapper>